# ===========================================
# ToitureAI - Configuration Environment
# Copiez ce fichier vers .env et remplissez les valeurs
# ===========================================

# === API Settings ===
APP_NAME=ToitureAI
APP_ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# === Security ===
# Secret pour authentifier les webhooks entrants (min 32 caracteres)
WEBHOOK_SECRET=your_webhook_secret_here_min_32_chars_xxxxxxx
# Secret pour signer les liens de tracking HMAC (min 32 caracteres)
TRACKING_SECRET=your_tracking_secret_here_min_32_chars_xxxxxx
# Secret pour les taches planifiees (cron)
CRON_SECRET=your_cron_secret_here_min_32_chars_xxxxxxxxxx

# === Supabase ===
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# === OpenAI ===
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# === SendGrid ===
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=contact@yourdomain.com
SENDGRID_FROM_NAME=ToitureAI

# === Admin Notifications ===
ADMIN_EMAIL=admin@yourdomain.com

# === DocuSeal ===
DOCUSEAL_API_KEY=your_docuseal_api_key
DOCUSEAL_WEBHOOK_SECRET=your_docuseal_webhook_secret

# === Turnstile (Cloudflare CAPTCHA) ===
TURNSTILE_SECRET_KEY=your_turnstile_secret_key
TURNSTILE_SITE_KEY=your_turnstile_site_key

# === Google Maps ===
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# === Sentry (Error Monitoring - optionnel) ===
SENTRY_DSN=https://your-sentry-dsn

# === URLs ===
# URL de base de l'API (pour les liens de tracking)
API_BASE_URL=https://api.yourdomain.com
# URL du site web
WEBSITE_URL=https://yourdomain.com
# URL du dashboard admin
DASHBOARD_URL=https://app.yourdomain.com

# === Lead Qualification ===
# Score minimum pour considerer un lead comme "chaud" (0-100)
HOT_LEAD_THRESHOLD=70

# === Rapport Mensuel ===
# Heure d'envoi du rapport (format 24h, 0-23)
MONTHLY_REPORT_HOUR=8
# Jour du mois (1-28)
MONTHLY_REPORT_DAY=1
